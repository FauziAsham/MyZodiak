<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/iv_zodiak"
        android:layout_width="100dp"
        android:layout_height="150dp"
        android:adjustViewBounds="true"
        android:src="@drawable/ic_launcher_background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="8dp"
        tools:ignore="MissingConstraints"/>

    <TextView
        android:id="@+id/tv_zodiak_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="76dp"
        android:text="@string/app_name"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/iv_zodiak"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_zodiak_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="8dp"
        android:maxLines="3"
        android:text="@string/app_name"
        app:layout_constraintStart_toEndOf="@id/iv_zodiak"
        app:layout_constraintTop_toBottomOf="@id/tv_zodiak_name" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="detail"
        android:layout_margin="8dp"
        app:layout_constraintStart_toEndOf="@+id/iv_zodiak"
        app:layout_constraintTop_toBottomOf="@+id/tv_zodiak_detail"
        android:onClick="goToDetail"/>

</androidx.constraintlayout.widget.ConstraintLayout>